# NeonDB Configuration
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Neon Auth Configuration
NEON_AUTH_URL="https://your-neon-auth-url"
NEON_AUTH_JWKS_URL="https://your-neon-auth-url/.well-known/jwks.json"

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your-project-id"
APPWRITE_API_KEY="your-api-key"
NEXT_PUBLIC_APPWRITE_BUCKET_ID="your-bucket-id"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://insanprihatin.org"
NEXT_PUBLIC_SITE_NAME="Yayasan Insan Prihatin"

# Resend API for Email Notifications
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxx"

# Email From Address (optional)
# Default: Yayasan Insan Prihatin <onboarding@resend.dev> (test only - can only send to your own email)
# For production: Verify your domain at https://resend.com/domains
# Then use: Yayasan Insan Prihatin <noreply@yourdomain.com>
EMAIL_FROM="Yayasan Insan Prihatin <noreply@insanprihatin.org>"

# JWT Secret for Admin Authentication
JWT_SECRET="your-secure-random-secret-key"

# Admin Password (change in production!)
ADMIN_PASSWORD="admin123"

# Admin Setup Token (for one-time operations like team initialization)
# Generate with: openssl rand -base64 32
ADMIN_SETUP_TOKEN="your-random-setup-token"

# Unsplash API (Required for Stock Photos in Admin Panel)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"